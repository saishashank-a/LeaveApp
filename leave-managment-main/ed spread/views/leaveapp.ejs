<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>leaveapp</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <script src="index.js"></script>
</head>


<body>

  <header class="text-center mb-5">
    <i class="bi bi-person-fill display-1 text-primary" style="font-size: 10rem"></i>
    <h1 class="display-1 h1">Leave request form</h1>
  </header>
  <%for(var i=0; i< data.length; i++){%>
    <main class="container">
      <section class="row mb-3">

        <div class="col font-medium">
          <label for="">First Name:</label>
          <span class="text-primary">
            <%=data[i].firstname%>
          </span>
        </div>
        <div class="col  ">
          <label class="text-lg ">Last Name:</label>
          <span class="text-primary">
            <%=data[i].lastname%>
          </span>
        </div>
      </section>
      <section class="row mb-3">
        <div class="col font-medium">
          <label for="">Employee ID:</label>
          <span class="text-primary">
            <%=data[i].eid%>
          </span>
        </div>
        <div class="col  ">
          <label class="text-lg ">Total leaves :</label>
          <span class="text-primary">
            <%=data[i].noleav%>
          </span>
        </div>
        <div class="row mb-3  ">
          <label class="text-lg ">Reason for leave:</label>
          <span class="text-primary">
            <%=data[i].leavereason%>
          </span>
        </div>
      </section>
      </section>
      <section class="row mb-3">
        <div class="col font-medium">
          <label for="">Start Date:</label>
          <span class="text-primary">
            <%=data[i].startdate%>
          </span>
        </div>
        <div class="col  leading-6 font-medium">
          <label class="text-lg ">End Date:</label>
          <span class="text-primary">
            <%=data[i].enddate%>
          </span>
        </div>


      </section>

      <!-- <section class="mb-3 row">
     <div class="col   leading-6 font-medium">
       <label >Requesting leave days:</label>
       <span class="text-indigo-700"
         >${calculateLeaveDays(startDate.value, endDate.value)} </span
       >
     </div>
  
     <div class="col   leading-6 font-medium">
       <label >Remaining leave day/s:</label>
       <span class="text-indigo-700"
         >${calculateRemainingLeaveDays(Totalleavesgiventostaff.value)}
         </span
       >
     </div>
   </section> -->
      <!-- <div class="col  ">
     <label >Submitted:</label>
     <span class="text-primary">${getSubmissionTimeStamp()} </span>
   </div> -->
      <!-- todo: buttons -->

      <section class="d-flex justify-content-between mt-3">
        <form action="/accept" method="post">
          <button type="submit" class="btn btn-success btn-lg" name="approve" id="mybtn"><i
              class="bi bi-emoji-smile-fill me-2 " onclick="approve()"></i>Approve</button>
          <p id="test"></p>
        </form>
        <form action="/accept" method="post">
          <button type="submit" class="btn btn-danger btn-lg" name="decline" id="mybtn2"><i
              class="bi bi-emoji-frown-fill me-2" style="margin: right 200px;" onclick="declien()"></i>Decline</button>
          <p id="test2"></p>
      </section>
      <% }%>
        </form>
    </main>
</body>
</html>